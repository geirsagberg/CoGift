{
  "version": "0.0.1",
  "name": "CoGift",
  "private": true,
  "devDependencies": {
    "bower": "^1.4.1",
    "bower-files": "^3.7.0",
    "browserify": "^10.1.3",
    "del": "^1.1.1",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-less": "^3.0.3",
    "gulp-sourcemaps": "^1.5.2",
    "less": "^2.5.0",
    "less-plugin-autoprefix": "^1.4.1",
    "less-plugin-clean-css": "^1.5.0",
    "less-plugin-glob": "^1.1.0",
    "main-bower-files": "^2.8.0",
    "merge-stream": "^0.1.7",
    "parallelshell": "^1.1.1",
    "tsify": "^0.8.2",
    "typescript-register": "^1.1.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "*",
    "wr": "*"
  },
  "scripts": {
    "env": "env",
    "prestart": "npm run build",
    "start": "node server.js",
    "postinstall": "bower install",
    "watch-css": "wr 'npm run build-css' styles/",
    "watch-js": "watchify scripts/app.ts -p tsify -o public/bundle.js -dv",
    "watch": "npm run watch-css & npm run watch-js",
    "build-css": "lessc --include-path=styles:bower_components styles/app.less public/bundle.css --glob --autoprefix",
    "build-js": "browserify scripts/app.ts -p tsify -o public/bundle.js",
    "build": "npm run build-css; npm run build-js"
  },
  "dependencies": {
    "express": "^4.12.3",
    "path": "^0.11.14"
  }
}
