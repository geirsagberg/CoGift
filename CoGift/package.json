{
  "version": "0.0.1",
  "name": "CoGift",
  "private": true,
  "devDependencies": {
    "autoprefixer": "*",
    "bower": "^1.4.1",
    "browserify": "^10.1.3",
    "catw": "^1.0.0",
    "less": "^2.5.0",
    "less-plugin-autoprefix": "^1.4.1",
    "less-plugin-clean-css": "^1.5.0",
    "less-plugin-glob": "^1.1.0",
    "parallelshell": "^1.1.1",
    "tsify": "^0.8.2",
    "watchify": "*",
    "wr": "*"
  },
  "scripts": {
    "env": "env",
    "start": "dnx . kestrel",
    "watch-css": "wr 'npm run build-css' styles/ --glob",
    "watch-js": "watchify scripts/app.ts -p tsify -o wwwroot/bundle.js -dv",
    "watch": "npm run watch-css & npm run watch-js",
    "preprocess": "autoprefixer wwwroot/bundle.css",
    "build-css": "lessc styles/app.less wwwroot/bundle.css --glob --clean-css",
    "build-js": "browserify scripts/app.ts -p tsify > wwwroot/bundle.js",
    "build": "npm run build-css & npm run build-js"
  }
}
